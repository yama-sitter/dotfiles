[user]
	name = yama-sitter
	email = {{ .email }}
	signingkey = {{ .gpg_key }} 
[core]
  editor = nvim -u ~/.config/nvim/init.lua
[init]
  defaultBranch = main
[pager]
  log = {{ .git_diff_highlight_path }}/diff-highlight | less
  show = {{ .git_diff_highlight_path }}/diff-highlight | less
  diff = {{ .git_diff_highlight_path }}/diff-highlight | less
  difftool = true
[fetch]
  prune = true
[commit]
  verbose = true
  gpgsign = true
[ghq]
	root = ~/Sources
[alias]
  p = push
  st = status
  ss = status -s
  br = branch
  co = checkout
  cb = checkout -b
  ci = commit
  cm = commit -m
  cancel = reset --soft HEAD^
	ac = !git add -A && aicommits -a
  rb = !git rebase -i $(git merge-base $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@') HEAD)
[diff]
  tool = difftastic
  external = difft
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
